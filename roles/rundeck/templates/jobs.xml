<joblist>
  <job>
    <name>Tomcat logs add</name>
    <description>Add logs in tomcat serv</description>
    <context>
      <project>monitoring</project>
    </context>
    <sequence>
      <command>
        <exec>sudo rm /usr/share/tomcat/logs/*</exec>
      </command>
     </sequence>
    <nodefilters excludeprecedence="true">
      <include>
        <name>Tomcat2</name>
      </include>
    </nodefilters>
    <dispatch>
      <threadcount>1</threadcount>
      <keepgoing>true</keepgoing>
    </dispatch>
    <schedule>
      <time hour="00" minute="00"/>
      <weekday day="*"/>
      <month month="*"/>
    </schedule>
  </job>
</joblist>